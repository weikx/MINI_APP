/* components/tabBar/tabBar.wxss */
/* iconfont start */
@font-face {
  font-family: 'iconfont';
  /* project id 856985 */
  src: url('//at.alicdn.com/t/font_856985_okq1705lhoq.eot');
  src: url('//at.alicdn.com/t/font_856985_okq1705lhoq.eot?#iefix') format('embedded-opentype'),
    url('//at.alicdn.com/t/font_856985_okq1705lhoq.woff') format('woff'),
    url('//at.alicdn.com/t/font_856985_okq1705lhoq.ttf') format('truetype'),
    url('//at.alicdn.com/t/font_856985_okq1705lhoq.svg#iconfont') format('svg');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-android-fill:before {
  content: "\e881";
}

.icon-apple-fill:before {
  content: "\e882";
}

.icon-twitter:before {
  content: "\e885";
}

.icon-Youtube-fill:before {
  content: "\e886";
}

/* iconfont end */

.wrap {
  width: 100%;
  height: 100rpx;
  box-shadow: 0 -2px 10px rgba(51, 51, 51, .1);
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  color: #ccc;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 20rpx;
}

.tab-item text {
  display: block;
}

.checked-android {
  color: #ABC452;
}

.checked-ios {
  color: #AAAAAA;
}

.checked-twitter {
  color: #48A0EB;
}

.checked-youtube {
  color: #EC3323;
}