/* components/tabBar/tabBar.wxss */
@import "/static/wxss/icon.wxss";
.wrap {
  width: 100%;
  height: 100rpx;
  box-shadow: 0 -2px 10px rgba(51, 51, 51, .1);
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  color: #ccc;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 18rpx;
}

.tab-item text {
  display: block;
}

.checked-android {
  color: #ABC452;
}

.checked-ios {
  color: #AAAAAA;
}

.checked-twitter {
  color: #48A0EB;
}

.checked-youtube {
  color: #EC3323;
}

.checked-node {
  color: #86C865;
}

.node-wrap {
}

.icon-nodejs {
  font-size: 80rpx;
  /*margin-top: -70rpx;*/
  transition: all 2s;
}

.node-text {
  transition: all 2s;
}