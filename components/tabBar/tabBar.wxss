/* components/tabBar/tabBar.wxss */
/* iconfont start */
@font-face {
  font-family: 'iconfont';  /* project id 856985 */
  src: url('//at.alicdn.com/t/font_856985_p40s9i3zze.eot');
  src: url('//at.alicdn.com/t/font_856985_p40s9i3zze.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_856985_p40s9i3zze.woff') format('woff'),
  url('//at.alicdn.com/t/font_856985_p40s9i3zze.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_856985_p40s9i3zze.svg#iconfont') format('svg');
}

.iconfont {
  font-family:"iconfont" !important;
  font-size:32rpx;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-hua:before { content: "\e632"; }

/* iconfont end */

.wrap {
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #ccc;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  color: #FF5388;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 20rpx;
}

.tab-item text {
  display: block;
}