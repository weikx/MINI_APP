/* pages/goodsDetail/goodsDetail.wxss */
@import "/static/wxss/icon.wxss";
.wrap {
  height: 100vh;
}

.goods-img-wrap {
  width: 100vw;
  height: 90vw;
}

.goods-img {
  width: 100vw;
  height: 90vw;
}

.goods-info {
  width: 100vw;
  height: 40vw;
  background: #ffffff;
  overflow: hidden;
  border-radius: 50rpx 50rpx 0 0;
  position: absolute;
  margin-top: -100rpx;
  z-index: 99;
  box-shadow: 0 -20rpx 100rpx 20rpx rgba(0, 0, 0, .05);
  padding: 30rpx;
  box-sizing: border-box;
}

.goods-info__list {
  display: flex;
  margin-bottom: 20rpx;
}

.goods-info__list--last {
  width: 100%;
  position: absolute;
  bottom: 0;
}

.goods-info__left {
  flex: 1;
}

.goods-info__right {
  flex: 0 0 20vw;
  text-align: right;
  color: #FE737A;
}

.goods-name {
  font-size: 32rpx;
  display: block;
  width: 80vw;
}

.goods-desc {
  font-size: 24rpx;
  color: #cccccc;
}

.icon-shoucang1 {
  padding-right: 50rpx;
  font-size: 50rpx;
  color: #cccccc;
}

.goods-style-wrap {
  width: 80vw;
}

.goods-style {
  width: 70rpx;
  height: 70rpx;
}

.goods-style image {
  width: 100%;
  height: 100%;
}

.goods-main {
  margin-top: calc(40vw - 100rpx);
  height: 100vh;
}

.goods-title {
  height: 100rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}

.goods-display {
  display: flex;
  overflow-x: scroll;
  padding: 25rpx 0;
}

.goods-display image {
  flex: 0 0 200rpx;
  height: 180rpx;
  margin-left: 30rpx;
  box-shadow: 0 0 25rpx 10rpx rgba(0, 0, 0, .05);
  border-radius: 20rpx;
}

.card-placeholder {
  flex:0 0 30rpx;
  height: auto;
}