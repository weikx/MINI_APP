/* pages/goodsDetail/goodsDetail.wxss */
@import "/static/wxss/icon.wxss";
.wrap {
  height: 100vh;
}

.goods-img-wrap {
  width: 100vw;
  height: 90vw;
}

.goods-img {
  width: 100vw;
  height: 90vw;
}

.goods-info {
  width: 100vw;
  height: 50vw;
  background: #ffffff;
  overflow: hidden;
  border-radius: 50rpx 50rpx 0 0;
  position: absolute;
  margin-top: -100rpx;
  z-index: 99;
  box-shadow: 0 0 100rpx 20rpx rgba(0, 0, 0, .1);
  padding: 30rpx;
  box-sizing: border-box;
}

.goods-info__list {
  display: flex;
  margin-bottom: 20rpx;
}

.goods-info__list--last {
  width: 100%;
  position: absolute;
  bottom: 50rpx;
}

.goods-info__left {
  flex: 1;
}

.goods-info__right {
  flex: 0 0 20vw;
  text-align: right;
}

.goods-name {
  font-size: 32rpx;
  display: block;
  width: 80vw;
}

.goods-desc {
  font-size: 24rpx;
  color: #cccccc;
}

.icon-shoucang {
  padding-right: 50rpx;
  font-size: 50rpx;
  color: #cccccc;
}

.goods-style-wrap {
  width: 80vw;
}

.goods-style {
  width: 70rpx;
  height: 70rpx;
}

.goods-style image {
  width: 100%;
  height: 100%;
}

.goods-main {
  margin-top: calc(50vw - 100rpx);
  height: 100vh;
  background: #cccccc;
}